<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_margin="5dp"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/musicNameTextView"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="16sp"
        android:padding="5dp"
        android:text="a32.mp3"/>
    <Button
        android:id="@+id/musicPlayButtonIcon"
        android:layout_marginLeft="10dp"
        android:background="@drawable/ic_play_arrow_black_24dp"
        android:layout_width="24dp"
        android:layout_height="24dp" />
    <Button
        android:id="@+id/musicStopButtonIcon"
        android:layout_marginLeft="10dp"
        android:background="@drawable/ic_stop_black_24dp"
        android:layout_width="24dp"
        android:layout_height="24dp" />
    <Button
        android:id="@+id/musicStarButtonIcon"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/ic_star_border_black_24dp"
        android:layout_width="24dp"
        android:layout_height="24dp" />
</LinearLayout>